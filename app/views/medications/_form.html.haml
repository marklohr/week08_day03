= form_for [@medication] do |f|
  = f.label :name
  %br
  = f.text_field :name
  %br
  %br
  = f.label :side_effects
  %br
  = f.text_area :side_effects
  %br
  %br
  %h3 Prescribe this medication to existing patient:
  - @patients.each do |patient|
    = check_box_tag 'medication[patient_ids][]', patient.id, @medication.patients.include?(patient)
    = patient.first_name
    = patient.last_name
    %br
  %br
    = f.submit
%br


